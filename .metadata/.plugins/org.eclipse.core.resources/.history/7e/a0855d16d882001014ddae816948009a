package entity;

import java.util.List;

public class Usuario {
	
	private String nome;
	private String email;
	private String senha;
	private List<Agenda> compromissos;
	
	public Usuario() {
	}
	
	public Usuario(String nome, String email, String senha, List<Agenda> compromissos) {
		this.nome = nome;
		this.email = email;
		this.senha = senha;
		this.compromissos = compromissos;
	}

	public String getNome() {
		return nome;
	}

	public void setNome(String nome) {
		this.nome = nome;
	}

	public String getEmail() {
		return email;
	}

	public void setEmail(String email) {
		this.email = email;
	}

	public String getSenha() {
		return senha;
	}

	public void setSenha(String senha) {
		this.senha = senha;
	}

	public List<Agenda> getCompromissos() {
		return compromissos;
	}

	public void setCompromissos(List<Agenda> compromissos) {
		this.compromissos = compromissos;
	}
	
	public void adicionarCompromisso(Agenda c) {
        compromissos.add(c);
    }
	
	@Override
	public String toString() {
	    return "Usu√°rio: " + nome + " (" + email + ")";
	}
	
	

}
